<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:cardCornerRadius="4dp"
        android:layout_margin="5dp"
        android:id="@+id/related_askfrag" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Related"
            android:textColor="@color/red"
            android:textSize="25sp"
            android:drawableStart="@drawable/ic_baseline_turned_in_24"
            android:paddingStart="10dp"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:drawableLeft="@drawable/ic_baseline_turned_in_24"
            android:paddingLeft="10dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:cardCornerRadius="4dp"
        android:layout_margin="5dp"
        android:id="@+id/your_question_askfrag" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Questions"
            android:textColor="@color/red"
            android:textSize="25sp"
            android:drawableStart="@drawable/ic_baseline_restore_24"
            android:paddingStart="10dp"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:drawableLeft="@drawable/ic_baseline_restore_24"
            android:paddingLeft="10dp" />

    </androidx.cardview.widget.CardView>

</LinearLayout>